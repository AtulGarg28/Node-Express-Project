<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" placeholder="Enter city name" id="cityName" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Monday</p>
                        <p id="todayDate">23 APR</p>
                    </div>
                    <div class="low_layer">
                        <p id="city_name">Get City Name here.</p>
                        <div class="temp_layer data_hide">
                            <p id="temp"><span id="temp_real_value">22</span><sup>o</sup>C</p>
                            <p id="tempStatus"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const day = document.getElementById("day");
        const todayDate = document.getElementById("todayDate");

        var weekday = new Array(7);
        weekday[0] = "Sunday";
        weekday[1] = "Monday";
        weekday[2] = "Tuesday";
        weekday[3] = "Wednesday";
        weekday[4] = "Thursday";
        weekday[5] = "Friday";
        weekday[6] = "Saturday";

        var month = new Array();
        month[0] = "January";
        month[1] = "February";
        month[2] = "March";
        month[3] = "April";
        month[4] = "May";
        month[5] = "June";
        month[6] = "July";
        month[7] = "August";
        month[8] = "September";
        month[9] = "October";
        month[10] = "November";
        month[11] = "December";


        const getCurrentDay = () => {
            var curDate = new Date();
            let d = weekday[curDate.getDay()];
            day.innerText = d;
        };

        const getCurrentMonth = () => {
            var date = new Date();
            var curMonth = month[date.getMonth()];
            var curDate = date.getDate();
            const da = curMonth + " / " + curDate;
            todayDate.innerText = da;
        };

        getCurrentDay();
        getCurrentMonth();

    </script>
</body>

</html>